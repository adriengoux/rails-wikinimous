<h1>Articles</h1>

<%= link_to "new article", new_article_path %>

<ul>
  <li>
    <% @articles.each do |article| %>
      <h3><%= link_to article.title, article_path(article) %>, by <%= article.author %> | rating: <%= article.rating %></h3>
      <p><%= article.content %> </p>
      <p><%= article.url %> </p>
    <% end %>
  </li>
</ul>
